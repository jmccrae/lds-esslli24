              ('switzerland', 0.8280506134033203),
              ('austria', 0.8187914490699768),
              ('luxembourg', 0.8173472285270691)]
        section
          h2 Analogy
          pre
            code(language="python").
              def analogy(x1, x2, y1):
                result = glove.most_similar(positive=[y1, x2], 
                                            negative=[x1])
                return result[0][0]
        section
